{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "jsx": "react",
    "checkJs": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "test-utils": ["modules/test-utils"]
    }
  },
  "include": ["src/**/*",
    "modules/**/*", "index.js", "*.d.ts"]
}
