{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "test-utils/*": ["modules/test-utils/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "modules/**/*",
    "index.tsx",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "__mocks__", 
    "src/**/*.js",
    "src/**/*.jsx",
    "modules/**/*.js",
    "modules/**/*.jsx",
  ]
}
